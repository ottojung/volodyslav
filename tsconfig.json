{
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "noImplicitAny": true,
        "declaration": true,
        "emitDeclarationOnly": true,
        "outDir": "dist/types",
        "rootDir": ".",
        "jsx": "preserve",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "target": "ES2015"
    },
    "include": [
        "frontend/src/**/*.js",
        "frontend/src/**/*.jsx",
        "backend/src/**/*.js"
    ]
}
